#!/bin/sh

cat_bin="@cat@"
cut_bin="@cut@"
grep_bin="@grep@"
sed_bin="@sed@"
uuidgen_bin="@uuidgen@"


# Expects:
#   * PATH contains binary paths for echo, sed
#   * ./header.yaml exists
#   * ./rules.yaml exists
#   * ./uuids exists
header_file=./header.yaml
rules_file=./generated.yaml
uuid_file=./uuids


echo "Content-Type: text/plain"
echo  # WARN: mandatory empty line after HTTP header

if [[ -z "$PATH_INFO" ]]; then
  echo "specify something after the slash!"
  exit
fi

username="$(echo "$PATH_INFO" | "$cut_bin" -d/ -f2 | "$cut_bin" -d. -f1)"
if [[ -e "$uuid_file" ]] && "$grep_bin" -q "^$username=" "$uuid_file"; then
  uuid="$("$grep_bin" "^$username=" "$uuid_file" | "$cut_bin" -d= -f2)"
else
  uuid=$("$uuidgen_bin")
fi

echo "# Header begins"
if [[ -e "$header_file" ]]; then
  "$sed_bin" -Ee "s/@@uuid@@/$uuid/g" "$header_file"
else
  echo "empty header"
fi
echo "# Header ends"
echo
echo "# Content begins"
if [[ -e "$rules_file" ]]; then
  "$cat_bin" "$rules_file"
else
  echo "empty rules"
fi
echo "# Content ends"
