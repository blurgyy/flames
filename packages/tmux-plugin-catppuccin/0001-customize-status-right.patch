-setw window-status-current-format "#[fg=$thm_bg,bg=$thm_orange] #I #[fg=$thm_fg,bg=$thm_bg] #{b:pane_current_path} "
+setw window-status-current-format "#[fg=$thm_bg,bg=$thm_orange] #I${?window_zoomed_flag,*,} #[fg=$thm_fg,bg=$thm_bg] #{b:pane_current_path} "
 
